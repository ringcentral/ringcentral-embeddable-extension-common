.rc-upgrade-dom
  position fixed
  left 3px
  bottom 3px
  width 340px
  z-index 100
  background #fff
  border-radius 5px
  box-shadow 0px 0px 3px 3px rgba(0,0,0,0.35)
  padding 10px
  p
    margin-bottom 5px
  .up-btns-wrap
    text-align right
.rc-dismiss-upgrade
  cursor pointer
  font-size 20px
  display inline-block
  vertical-align middle
  &:hover
    color #08c
.rc-skip-upgrade
  vertical-align middle
  line-height 1.6
  position relative
  display inline-block
  font-weight 400
  white-space nowrap
  text-align center
  background-image none
  box-shadow 0 2px 0 rgba(0,0,0,.015)
  cursor pointer
  transition all .3s cubic-bezier(.645,.045,.355,1)
  user-select none
  touch-action manipulation
  margin-right 10px
  padding 0 15px
  font-size 12px
  border-radius 4px
  color rgba(0,0,0,.65)
  background-color #fff
  border 1px solid #d9d9d9