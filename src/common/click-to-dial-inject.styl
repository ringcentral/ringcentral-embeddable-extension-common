.rc-widget-c2d-menu
  user-select none
  position absolute
  top 0
  left 0
  transform opacity 0.1s 0s linear
  z-index 9999
  height 30px
  position fixed
  display none
  &.left
    .rc-widget-c2d-menu-wrapper
      margin 0 5px 0 0
    .rc-widget-c2d-arrow
      border-right none
      border-left 5px solid #cfcfcf
      left auto
      right 0
    .rc-widget-c2d-inner-arrow
      border-right none
      border-left 5px solid #fff
      left auto
      right 1px

.rc-widget-c2d-menu-wrapper
  background-color rgba(255, 255, 255, 0.95)
  box-sizing border-box
  border 1px solid #cfcfcf
  border-radius 4px
  font-size 0px
  height 30px
  white-space nowrap
  margin 0 0 0 5px

.rc-widget-c2d-logo
  display inline-block
  vertical-align baseline !important
  display inline-block !important
  margin -1px 0 0 -1px
  vertical-align baseline

.rc-widget-action-icon
  display inline-block
  position relative
  vertical-align top
  cursor pointer
  font-size 18px
  height 28px
  width 28px
  line-height 28px
  text-align center

.rc-widget-c2d-icon
  svg
    position relative
    top 2px
.rc-widget-c2meeting-icon
.rc-widget-c2sms-icon
  svg
    position relative
    top 3px


.rc-widget-c2d-separator-line
  display inline-block
  width 1px
  height 19px
  margin 5px 0
  background #cdcdcd

.rc-widget-c2d-arrow
  position absolute
  border-top 5px solid transparent
  border-bottom 5px solid transparent
  border-right 5px solid #cfcfcf
  top calc(50% - 5px)
  left 0

.rc-widget-c2d-inner-arrow
  position absolute
  border-top 5px solid transparent
  border-bottom 5px solid transparent
  border-right 5px solid #FF8800
  top calc(50% - 5px)
  left 1px

